<Window x:Class="ESCPOSTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="Window_Loaded"
        xmlns:p="clr-namespace:ESCPOSTester.Properties"
        Height="500" Width="500" Title="PTI Printer Test Utility - 1.0.0" Closing="Window_Closing">
    <Window.Resources>
        <ResourceDictionary Source="theme.xaml"/>
    </Window.Resources>
    <Grid Background="{StaticResource ThatchBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
            <Label Content="{x:Static p:Resources.TARGET_PRINTER}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0"/>
            <ComboBox x:Name="availablePrinters" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" 
                      SelectedItem="{Binding CurrentPrinter, Mode=TwoWay, IsAsync=True}" />
        </StackPanel>
        
        <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center">
            <Grid VerticalAlignment="Center">
                <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="100" Stroke="Black" VerticalAlignment="Center"
                       Width="100" AllowDrop="True" ToolTip="{x:Static p:Resources.PRINT_DROP_TIP}" Drop="UI_PrintTxt" DragEnter="UI_DragEnter"/>
                <Label Content="{x:Static p:Resources.DROP}" HorizontalAlignment="Center" VerticalAlignment="Center"
                   AllowDrop="True" DragEnter="UI_DragEnter" Drop="UI_PrintTxt"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="0" VerticalAlignment="Center">
            <Grid>
                <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="100" Stroke="Black" VerticalAlignment="Center"
                       Width="100" AllowDrop="True" ToolTip="{x:Static p:Resources.PRINT_DROP_TIP_BIN}" Drop="UI_PrintBin"
                       DragEnter="UI_DragEnter"/>
                <Label Content="{x:Static p:Resources.DROP_BIN}" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" AllowDrop="True" DragEnter="UI_DragEnter" Drop="UI_PrintBin"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">
            <Grid>
                <Button x:Name="printFile" Content="{x:Static p:Resources.BUTTON_PRINT_FILE}" HorizontalAlignment="Center" 
                    VerticalAlignment="Center" Width="74" Click="printFile_Click" ToolTip="{x:Static p:Resources.PRINT_FILE_TIP}"/>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            <TextBox Grid.Column="1" Height="22" TextWrapping="Wrap" Text="{Binding CurrentHex, Mode=TwoWay, IsAsync=True}"
                     VerticalAlignment="Top" Margin="0,10,0,0"/>
            <Button x:Name="SendCustomHex" Content="Send Hex" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Grid.Column="1" Grid.Row="1" Click="SendCustomHex_Click" 
                    ToolTip="Send Raw Hex" />
        </StackPanel>

        <StackPanel Grid.Column="2" Grid.Row="1" VerticalAlignment="Center">
                <Button x:Name="Cut" Content="Cut" VerticalAlignment="Top" HorizontalAlignment="Center" Click="Cut_Click" HorizontalContentAlignment="Center" Margin="0,10,0,0" Width="100"/>
                <Button x:Name="Eject" Content="Eject" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center" Click="Eject_Click" Margin="0,10"/>
                <Button x:Name="Reject" Content="Reject" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center" Click="Reject_Click" Margin="0,0,0,10"/>
                <Button x:Name="Present" Content="Present" HorizontalAlignment="Center"  VerticalAlignment="Center" Width="100" Click="Present_Click"/>
            <Button x:Name="Reboot" Content="Reboot" HorizontalAlignment="Center" VerticalAlignment="Center" Width="100" Click="Reboot_Click" Visibility="Collapsed"/>
        </StackPanel>

        
        <StackPanel Grid.Column="0" Grid.Row="2" VerticalAlignment="Center">
            
            <Button x:Name="RandomBtn" Content="Start Random" Grid.Column="1" HorizontalAlignment="Center"             
                VerticalAlignment="Bottom" Width="74" Click="Random_Click" Margin="0,10,0,0" 
                    ToolTip="Send Sherlock Holmes text to target"/>
            
            <TextBox x:Name="txtTicketCount" HorizontalAlignment="Center" Height="23"
                 PreviewTextInput="txtShouldBeNumber_PreviewTextInput" DataObject.Pasting="txtShouldBeNumber_Pasting"
                 TextWrapping="Wrap" Text="3" VerticalAlignment="Top"  Margin="0,10,0,0" 
                     Width="30" ToolTip="Ticket Count"/>
            
            <TextBox x:Name="txtTimeBetweenMs" Height="23"
                     PreviewTextInput="txtShouldBeNumber_PreviewTextInput"  Margin="0,10,0,0" 
                     DataObject.Pasting="txtShouldBeNumber_Pasting"
                     TextWrapping="Wrap" Text="4000" VerticalAlignment="Bottom" Width="60" 
                     ToolTip="Time Between ms"/>
        </StackPanel>
        
        <StackPanel Visibility="Hidden">
            <Button x:Name="printString" Content="{x:Static p:Resources.BUTTON_PRINT_STRING}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" 
                Grid.Column="0" Grid.Row="1" Click="printString_Click" 
                ToolTip="{x:Static p:Resources.PRINT_STRING_TIP}" VerticalContentAlignment="Center" Margin="0,0,0,10"/>
        </StackPanel>

  
    </Grid>
</Window>
