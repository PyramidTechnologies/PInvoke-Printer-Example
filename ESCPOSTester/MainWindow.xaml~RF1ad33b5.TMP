<Window x:Class="ESCPOSTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="Window_Loaded"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="printString" Content="Print String" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Grid.Column="0" Grid.Row="1" Click="printString_Click" ToolTip="Print a single string"/>
        <Button x:Name="printFile" Content="Print File" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Grid.Column="1" Grid.Row="1" Click="printFile_Click" ToolTip="Print any file"/>
        <ComboBox x:Name="availablePrinters" HorizontalAlignment="Center" VerticalAlignment="Center" Width="120" SelectedItem="{Binding CurrentPrinter, Mode=TwoWay, IsAsync=True}" >
        </ComboBox>
        <TextBox x:Name="printString1" Height="23" Grid.Row="1" TextWrapping="Wrap" Text="{Binding CurrentString, Mode=TwoWay, IsAsync=True}" VerticalAlignment="Top" Margin="10,20,0,0"/>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="100" Stroke="Black" VerticalAlignment="Center" Width="100" AllowDrop="True" ToolTip="Drop hexdump files here" Drop="Rectangle_Drop" DragEnter="Rectangle_DragEnter"/>
        <Label Content="[drop]" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" AllowDrop="True" DragEnter="UI_DragEnter" Drop="UI_Drop"/>
    </Grid>
</Window>
